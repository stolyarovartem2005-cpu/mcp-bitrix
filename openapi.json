{
  "openapi": "3.1.0",
  "info": {
    "title": "MCP Bitrix Connector",
    "version": "1.0.1",
    "description": "API-проксі для інтеграції між ChatGPT і Bitrix24 через Render."
  },
  "servers": [
    {
      "url": "https://mcp-bitrix.onrender.com/",
      "description": "Render сервер MCP Bitrix"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "get_health",
        "summary": "Перевірка стану сервера",
        "description": "Повертає підтвердження, що сервер Render працює.",
        "responses": {
          "200": {
            "description": "Сервер працює успішно"
          }
        }
      }
    },
    "/bitrix": {
      "post": {
        "operationId": "post_bitrix",
        "summary": "Виконати запит до Bitrix24",
        "description": "Надсилає POST-запит до Bitrix24 через сервер-проксі.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "method": {
                    "type": "string",
                    "example": "crm.lead.list"
                  },
                  "params": {
                    "type": "object",
                    "example": {
                      "select": ["ID", "TITLE"],
                      "filter": { "STATUS_ID": "NEW" }
                    }
                  }
                },
                "required": ["method"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Відповідь від Bitrix24 API"
          }
        }
      }
    }
  }
}
