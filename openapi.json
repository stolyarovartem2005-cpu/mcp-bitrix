{
  "openapi": "3.1.0",
  "info": {
    "title": "Bitrix24 MCP API",
    "version": "1.0.0",
    "description": "Proxy API for Bitrix24 to be used with ChatGPT Actions."
  },
  "servers": [
    {
      "url": "https://mcp-bitrix.onrender.com"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Check server health status",
        "operationId": "get_health",
        "responses": {
          "200": {
            "description": "Server is alive",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "status": { "type": "string" } } }
              }
            }
          }
        }
      }
    },
    "/bitrix": {
      "get": {
        "summary": "Fetch list of leads from Bitrix24",
        "operationId": "get_bitrix",
        "responses": {
          "200": {
            "description": "List of leads from Bitrix24"
          }
        }
      },
      "post": {
        "summary": "Call any Bitrix24 API method",
        "operationId": "post_bitrix",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "method": { "type": "string", "example": "crm.lead.list" },
                  "params": { "type": "object", "example": { "filter": { "STATUS_ID": "NEW" } } }
                },
                "required": ["method"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bitrix24 API response"
          }
        }
      }
    }
  }
}
