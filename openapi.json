{
  "openapi": "3.1.0",
  "info": {
    "title": "MCP Bitrix Connector",
    "version": "1.0.0",
    "description": "API-проксі між ChatGPT та Bitrix24 через Render-сервер."
  },
  "servers": [
    {
      "url": "https://mcp-bitrix.onrender.com/",
      "description": "Головний сервер Render"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Перевірка стану сервера",
        "description": "Повертає статус про працездатність сервера.",
        "responses": {
          "200": {
            "description": "Сервер працює"
          }
        }
      }
    },
    "/bitrix": {
      "post": {
        "summary": "Виконати запит до Bitrix24",
        "description": "Відправляє запит до Bitrix24 через Render-проксі.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "method": {
                    "type": "string",
                    "example": "crm.lead.list"
                  },
                  "params": {
                    "type": "object",
                    "example": {
                      "select": ["ID", "TITLE"],
                      "filter": {"STATUS_ID": "NEW"}
                    }
                  }
                },
                "required": ["method"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Відповідь від Bitrix24 API"
          }
        }
      }
    }
  }
}
